{{outlet}}

<div class="signup_container">
	<div class="title">
		Registration
	</div>
	
	<form {{action 'Submit' true on='submit'}} >
		
		<div class="user-details">
			
			<div class="input-box {{if fn_bool fn_class}}" {{action 'fieldEmptyValid' first_name 'fn_class' 'fn_bool' 'fn_small' 'First Name can\'t be Blank' 'fn_validbool' on='focusOut'}}>
				<span class="details">First Name</span>
				{{input type="text" value=first_name placeholder="First Name" required=true}}
				<i class="material-symbols-outlined suc">check_circle</i>
				<i class="material-symbols-outlined err">error</i>
				<small>{{fn_small}}</small>
			</div>


			<div class="input-box {{if ln_bool ln_class}}" {{action 'fieldEmptyValid' last_name 'ln_class' 'ln_bool' 'ln_small' 'Last Name can\'t be Blank' 'ln_validbool' on='focusOut'}}>
				<span class="details ">Last Name</span>
				{{input  type="text" value=last_name placeholder="Last Name" required=true}}
				<i class="material-symbols-outlined suc">check_circle</i>
				<i class="material-symbols-outlined err">error</i>
				<small>{{ln_small}}</small>
			</div>


			<div class="gender-details">
				
				<input type="radio" name="gender" id="dot-1" value="m" checked="checked">
				<input type="radio" name="gender" id="dot-2" value="f">
				
				<span class="gender-title">Gender</span>
				<div class="category">
					<label for="dot-1">
						<span class="dot one"></span>
						<span class="gender">Male</span>
					</label>
					<span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
					<label for="dot-2">
						<span class="dot two"></span>
						<span class="gender">Female</span>
					</label>
				</div>
			</div>



			<div class="input-box {{if dob_bool dob_class}}" {{action 'fieldEmptyValid' dob 'dob_class' 'dob_bool' 'dob_small' 'Fill Date Of Birth' 'dob_validbool' on='focusOut'}} >
				<span class="details">Date of Birth</span>
				{{input type="date" value=dob required=true}}
				<i class="material-symbols-outlined suc" style="top: 43px; right: 20px;">check_circle</i>
				<i class="material-symbols-outlined err" style="top: 43px; right: 20px;">error</i>
				<small>{{dob_small}}</small>
			</div>

			<div class="input-box {{if fln_bool fln_class}}" {{action 'fieldEmptyValid' flat_no 'fln_class' 'fln_bool' 'fln_small' 'Flat No can\'t be Blank' 'fln_validbool' on='focusOut'}}>
				<p class="gender-title">Address</p>
				<span class="details">Flat No<span> *</span></span>
				{{input type="text" placeholder="Flat No" value=flat_no required=true}}
				<i class="material-symbols-outlined suc" style="top: 90px; right: 9px;">check_circle</i>
				<i class="material-symbols-outlined err" style="top: 90px; right: 9px;">error</i>
				<small style="top: 117px;">{{fln_small}}</small>
			</div>
			
			<div class="input-box {{if str_bool str_class}}" {{action 'fieldEmptyValid' street 'str_class' 'str_bool' 'str_small' 'Street can\'t be Blank' 'str_validbool' on='focusOut'}}>
				<p class="gender-title">&nbsp;</p>
				<span class="details">Street</span>
				{{input type="text" placeholder="Street" value=street required=true}}
				<i class="material-symbols-outlined suc" style="top: 90px; right: 9px;">check_circle</i>
				<i class="material-symbols-outlined err" style="top: 90px; right: 9px;">error</i>
				<small style="top: 117px;">{{str_small}}</small>
			</div>
			
			<div class="input-box {{if ct_bool ct_class}}" {{action 'fieldEmptyValid' city 'ct_class' 'ct_bool' 'ct_small' 'City can\'t be Blank' 'ct_validbool' on='focusOut'}}>
				<span class="details">City</span>
				{{input type="text" placeholder="City" value=city required=true}}
				<i class="material-symbols-outlined suc">check_circle</i>
				<i class="material-symbols-outlined err">error</i>
				<small>{{ct_small}}</small>
			</div>
			
			<div class="input-box {{if state_bool state_class}}">
				<span class="details">State</span>
				<select onmouseleave={{action "setSelected" value="target.value"}}>
          			<option disabled selected>Select a state...</option>
          			<option value="Andhra Pradesh">Andhra Pradesh</option>
					<option value="Andaman and Nicobar Islands">Andaman and Nicobar Islands</option>
					<option value="Arunachal Pradesh">Arunachal Pradesh</option>
					<option value="Assam">Assam</option>
					<option value="Bihar">Bihar</option>
					<option value="Chandigarh">Chandigarh</option>
					<option value="Chhattisgarh">Chhattisgarh</option>
					<option value="Dadar and Nagar Haveli">Dadar and Nagar Haveli</option>
					<option value="Daman and Diu">Daman and Diu</option>
					<option value="Delhi">Delhi</option>
					<option value="Lakshadweep">Lakshadweep</option>
					<option value="Puducherry">Puducherry</option>
					<option value="Goa">Goa</option>
					<option value="Gujarat">Gujarat</option>
					<option value="Haryana">Haryana</option>
					<option value="Himachal Pradesh">Himachal Pradesh</option>
					<option value="Jammu and Kashmir">Jammu and Kashmir</option>
					<option value="Jharkhand">Jharkhand</option>
					<option value="Karnataka">Karnataka</option>
					<option value="Kerala">Kerala</option>
					<option value="Madhya Pradesh">Madhya Pradesh</option>
					<option value="Maharashtra">Maharashtra</option>
					<option value="Manipur">Manipur</option>
					<option value="Meghalaya">Meghalaya</option>
					<option value="Mizoram">Mizoram</option>
					<option value="Odisha">Odisha</option>
					<option value="Nagaland">Nagaland</option>
					<option value="Punjab">Punjab</option>
					<option value="Rajasthan">Rajasthan</option>
					<option value="Sikkim">Sikkim</option>
					<option value="Tamil Nadu">Tamil Nadu</option>
					<option value="Telangana">Telangana</option>
					<option value="Tripura">Tripura</option>
					<option value="Uttar Pradesh">Uttar Pradesh</option>
					<option value="Uttarakhand">Uttarakhand</option>
					<option value="West Bengal">West Bengal</option>
				</select>
				<i class="material-symbols-outlined suc" style="top: 43px; right: 20px;">check_circle</i>
				<i class="material-symbols-outlined err" style="top: 43px; right: 20px;">error</i>
				<small>{{state_small}}</small>
			</div>
			
			<div class="input-box {{if pin_bool pin_class}}" {{action 'pinValid' pincode 'pin_class' 'pin_bool' 'pin_small' 'Enter six Digit Valid Pincode' 'pin_validbool' on='focusOut'}}>
				<span class="details">Pincode</span>
				{{input type="text" placeholder="Pincode" min="1" max="6" value=pincode required=true}}
				<i class="material-symbols-outlined suc">check_circle</i>
				<i class="material-symbols-outlined err">error</i>
				<small>{{pin_small}}</small>
			</div>
			
			<div class="input-box {{if doj_bool doj_class}}" {{action 'fieldEmptyValid' doj 'doj_class' 'doj_bool' 'doj_small' 'Fill Date Of Joining' 'doj_validbool' on='focusOut'}}>
				<span class="details">Date of Joining</span>
				{{input type="date" value=doj required=true}}
				<i class="material-symbols-outlined suc" style="top: 43px; right: 20px;">check_circle</i>
				<i class="material-symbols-outlined err" style="top: 43px; right: 20px;">error</i>
				<small>{{doj_small}}</small>
			</div>
			
			<div class="designation-details">
				
				<input type="radio" name="designation" id="dot-3" value="1" checked="checked" required>				
				<input type="radio" name="designation" id="dot-4" value="2">
				
				<span class="gender-title">Employee Designation</span>
				<div class="category">
					<label for="dot-3">
						<span class="dot one"></span>
						<span class="gender">Employee</span>
					</label>
					<span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
					<label for="dot-4">
						<span class="dot two"></span>
						<span class="gender">Manager</span>
					</label>
				</div>
			</div>
			
			<div class="input-box {{if email_bool email_class}}" {{action 'emailValid' email 'email_class' 'email_bool' 'email_small' 'Enter Valid Email' 'email_validbool' on='focusOut'}}>
				<span class="details">Email</span>
				{{input type="text" placeholder="Email" value=email required=true}}
				<i class="material-symbols-outlined suc">check_circle</i>
				<i class="material-symbols-outlined err">error</i>
				<small>{{email_small}}</small>
			</div>
			
			<div class="input-box {{if pass_bool pass_class}}" {{action 'passReg' pass 'pass_class' 'pass_bool' 'pass_small'  'pass_validbool' on='focusOut'}}>
				<span class="details">Password</span>
				{{input type="password" placeholder="Password" value=pass required=true}}
				<i class="material-symbols-outlined suc">check_circle</i>
				<i class="material-symbols-outlined err">error</i>
				<small>{{pass_small}}</small>
			</div>
			
			<div class="input-box {{if cpass_bool cpass_class}}" {{action 'passConfirm' pass  cpass 'cpass_class' 'cpass_bool' 'cpass_small' 'Password Does\'nt Match' 'cpass_validbool' on='focusOut'}}>
				<span class="details">Confirm Password</span>
				{{input type="password" placeholder="Confirm" value=cpass required=true}}
				<i class="material-symbols-outlined suc">check_circle</i>
				<i class="material-symbols-outlined err">error</i>
				<small>{{cpass_small}}</small>
			</div>

		</div>
		
		<div class="button" style="text-align: center; align-items: center;">
			<input type="submit" value="Signup" id="check" >
		</div>

	</form>
</div>

